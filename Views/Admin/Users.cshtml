@using Shopping_And_Bidding.Models;
@{
    ViewBag.Title = "Post";
    Layout = "~/Views/Shared/Profile.cshtml";
}
@model List<user>
<header>
    <div class="row" style="margin-top:30px">
        <div class="col-md-3">
            <a href="/User/Index">
                <img src="~/Images/Bidding-for-Good-Logo[1].jpg"
                     style="border-radius:20px;border:solid"
                     width="150px" height="125px" />
            </a>
        </div>
        <div class="col-md-8">
            <div class="wrapper" style="margin-top:5px">
                <div class="bannerad">
                    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                    <ins class="adsbygoogle"
                         style="display:inline-block;width:728px;height:100px"
                         data-ad-client="ca-pub-4560135486422930"
                         data-ad-slot="8876535802"></ins>
                    <script>
                            (adsbygoogle = window.adsbygoogle || []).push({});
                    </script>
                </div>
            </div>
        </div>
    </div>
</header>
<section>
    <br /><br />
    <div class="row">
        <div class="col-md-9">
            <h2 style="color:burlywood">Users</h2>
            <p>You can manage your website User here</p>
        </div>
        <div class="col-md-3">
            <a href="/Admin/AddUser/@(((user)Session["user"]).Uid)"><input type="submit" style="background-color:darkorange;margin-top:50px;color:white;font-weight:100;width:100px;height:50px" value=" Add User " class="btn btn-default" /></a>
        </div>
    </div>
    <br /><br />
    <div class="row">
        <div class="col-md-12" style="margin-left:10%">
            @if (@Model.Count >= 1)
            {
                <h3 style="margin-left:10%;color:darkorange"> Current Users</h3>
                    <table border="1" width="800px" height="50px">
                        <thead>
                            <tr style="background-color:coral;color:whitesmoke;font:bold">
                                <td class="col-lg-4">Name</td>
                                <td class="col-lg-2">Email</td>
                                <td class="col-lg-3">PhoneNumber</td>
                                <td class="col-lg-3">DOB</td>
                            </tr>
                        </thead>
                        @foreach (user s in Model)
                        {
                            <tr>
                                <td class="col-md-4">@s.name</td>
                                <td class="col-md-2">@s.email</td>
                                <td class="col-md-3">@s.phone_no</td>
                                <td class="col-md-3">@s.DOB</td>
                                <td class="col-md-2"><a href="/Admin/Edit/@s.Uid">Edit User</a></td>
                                <td class="col-md-2"><a href="/Admin/DeleteUser/@s.Uid">Delete User</a></td>
                            </tr>
                        }
                    </table>
            }
            else if (@Model.Count < 1)
            {
                <h3 style="margin-left:30%;color:darkorange"> No User Available</h3>
            }

        </div>
    </div>
</section>