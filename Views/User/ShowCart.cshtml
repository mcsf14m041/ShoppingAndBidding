@using Shopping_And_Bidding.Models;
@{
    ViewBag.Title = "Show Cart";
    Layout = "~/Views/Shared/Profile.cshtml";
}
@model List<cart>
<header>
    <div class="row" style="margin-top:30px">
        <div class="col-md-3">
            <a href="/User/Index">
                <img src="~/Images/Bidding-for-Good-Logo[1].jpg"
                     style="border-radius:20px;border:solid"
                     width="150px" height="125px" />
            </a>
        </div>
        <div class="col-md-8">
            <div class="wrapper" style="margin-top:5px">
                <div class="bannerad">
                    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                    <ins class="adsbygoogle"
                         style="display:inline-block;width:728px;height:100px"
                         data-ad-client="ca-pub-4560135486422930"
                         data-ad-slot="8876535802"></ins>
                    <script>
                            (adsbygoogle = window.adsbygoogle || []).push({});
                    </script>
                </div>
            </div>
        </div>
    </div>
</header>
<section>
    <br /><br />
    <div class="row">
        <div class="col-md-9">
            <h3 style="color:burlywood">Yours Cart</h3>
            <p>You can check your cart here</p>
        </div>
    </div>
    <br /><br />
    <div class="row">
        <div class="col-md-12" style="margin-left:10%">
            @if (@Model.Count >= 1)
            {
                var price = 0;
                <h3 style="margin-left:15%;color:darkorange"> Current Cart</h3>
                    <table border="1" style="margin:auto" class="table table-striped" width="600px" height="50px">
                        <thead>
                            <tr style="background-color:coral;color:whitesmoke;font:bold">
                                <td class="col-md-4">Item Id</td>
                                <td class="col-md-2">Name</td>
                                <td class="col-md-3">Price</td>
                            </tr>
                        </thead>
                        @foreach (cart c in Model)
                        {
                            <tr>
                                <td class="col-md-2">@c.Cid</td>
                                <td class="col-md-2">@c.Pname</td>
                                <td class="col-md-3">@c.Price</td>
                            </tr>
                        }
                    </table>
            }
            else if (@Model.Count < 1)
            {
                <h3 style="margin-left:30%;color:darkorange"> No Product Available</h3>
            }

        </div>
    </div>
</section>